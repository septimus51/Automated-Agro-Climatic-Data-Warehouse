# =============================================================================
# ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agroclimate
DB_USER=etl_user
DB_PASSWORD=your_secure_password_here

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
# SoilGrids (ISRIC) - Free, no API key required
SOIL_API_URL=https://rest.isric.org/soilgrids/v2.0/properties/query
SOIL_API_TIMEOUT=30

# Open-Meteo - Free, no API key required
WEATHER_API_URL=https://archive-api.open-meteo.com/v1/archive
WEATHER_FORECAST_URL=https://api.open-meteo.com/v1/forecast
WEATHER_API_TIMEOUT=30

# Rate limiting (requests per second)
API_RATE_LIMIT=1.0

# -----------------------------------------------------------------------------
# ETL PIPELINE SETTINGS
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
ETL_BATCH_SIZE=1000
DATA_RETENTION_DAYS=365

# Parallel processing
MAX_WORKERS=4

# -----------------------------------------------------------------------------
# SCRAPING CONFIGURATION
# -----------------------------------------------------------------------------
SCRAPING_DELAY=2.0
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
USER_AGENT=AgroClimateDataBot/1.0 (Research Project; contact@yourdomain.com)

# -----------------------------------------------------------------------------
# NLP SETTINGS
# -----------------------------------------------------------------------------
SPACY_MODEL=en_core_web_sm
# Options: en_core_web_sm (fast), en_core_web_md (balanced), en_core_web_trf (accurate)

# Transformer model for advanced extraction (optional)
TRANSFORMER_MODEL=bert-base-uncased

# -----------------------------------------------------------------------------
# STORAGE PATHS
# -----------------------------------------------------------------------------
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
LOGS_PATH=./logs

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_SOIL_API=true
ENABLE_WEATHER_API=true
ENABLE_WEB_SCRAPING=true
ENABLE_NLP_TRANSFORMATION=true

# Dry run mode (test without writing to database)
DRY_RUN=false